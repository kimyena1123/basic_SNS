<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.yena.sns.user.dao.UserDAO">

	<insert id="insertSignup"
			parameterType="map">
		INSERT INTO
			`user`
		(
			user_id
			,user_pw
			,user_name
			,user_birth
			,user_email
			,createdAt
			,updatedAt
		)
		VALUE
		(
			#{user_id}
			,#{user_pw}
			,#{user_name}
			,#{user_birth}
			,#{user_email}
			,now()
			,now()
		)
	</insert>
	
	<select id="checkId"
			parameterType="String"
			resultType="int">
		SELECT
			count(1)
		FROM
			`user`
		WHERE
			user_id = #{user_id}
	</select>
	
	<select id="checkEmail"
			parameterType="String"
			resultType="int">
		SELECT
			count(1)
		FROM
			`user`
		WHERE
			user_email = #{user_email}
	</select>
	
	<select id="selectUser"
			parameterType="map"
			resultType="com.yena.sns.user.model.User">
		SELECT
			`id`
			,`user_id`
			,`user_pw`
			,`user_name`
			,`user_birth`
			,`user_email`
			,createdAt
			,updatedAt
		FROM
			`user`
		WHERE
			user_id = #{user_id}
		AND
			user_pw = #{user_pw}
	</select>
	
	
	
	
	
	
	
</mapper>